extend index

block content
    .row(style="padding-top:20px;")
        .large-6.columns
            form(action="/", method="post")
                .large-12.columns
                    label Restaurant name
                        input#name(placeholder="Restaurant name", required="required", name="name", type="text")
                .large-12.columns
                    label Restaurant description
                        textarea#description(placeholder="Restaurant description", required="required", name="description", style="height:250px;")
                .large-12.columns
                    label How much of a detour?
                        textarea#detour(placeholder="About 525,600 minutes", required="required", name="detour", style="height:150px;")
                .large-12.columns
                    .large-12.columns
                        label Restaurant address
                            input#address(placeholder="Address", name="address", type="text")
                    .large-6.columns
                        label Restaurant tel
                            input#phone(placeholder="Tel#", name="phone", type="text")
                    .large-6.columns
                        label Restaurant website
                            input#website(placeholder="Website", name="website", type="text")
                    .large-6.columns
                        label Lat
                            input#lat(placeholder="Lat", name="lat", type="text")
                    .large-6.columns
                        label Long
                            input#long(placeholder="Long", name="long", type="text")
                .button-group
                    button.button.disabled Preview
                    button(type="submit").button.success Submit
        .large-6.columns.callout.secondary
            h4 <s>Preview</s>
            .large-12.columns(style="height:100vh")
